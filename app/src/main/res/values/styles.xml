<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LeftTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_marginBottom">@dimen/layout_bottom_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_top_margin</item>
        <item name="android:textSize">@dimen/all_text_size</item>
        <item name="android:textColor">#acb6ac</item>

    </style>

    <style name="RightTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_marginBottom">@dimen/layout_bottom_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_top_margin</item>
        <item name="android:textSize">@dimen/all_text_size</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="MarkStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:paddingLeft">@dimen/mark_padding_left_right</item>
        <item name="android:paddingRight">@dimen/mark_padding_left_right</item>
        <item name="android:paddingTop">@dimen/mark_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/mark_padding_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/layout_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_bottom_margin</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MainTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_marginBottom">@dimen/main_text_margin</item>
        <item name="android:layout_marginTop">@dimen/main_text_margin</item>
        <item name="android:textSize">@dimen/all_text_size</item>
        <item name="android:textColor">#000000</item>

    </style>
</resources>
